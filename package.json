{
  "private": true,
  "engines": {
    "npm": ">=9.0.0",
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "build:clean": "./scripts/clean-build-fast.sh",
    "build:clean:full": "./scripts/clean-build.sh",
    "start": "next start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "format": "npx prettier --write \"{__tests__,components,pages,styles}/**/*.{ts,tsx,js,jsx}\"",
    "lint": "next lint && npx prettier --check \"{__tests__,components,pages,styles}/**/*.{ts,tsx,js,jsx}\" && npx tsc --noEmit",
    "db:migrate": "node supabase/apply-migrations.js",
    "db:types": "npx supabase gen types typescript --local > lib/supabase/types-gen.ts",
    "db:types:remote": "npx supabase gen types typescript --project-id $SUPABASE_PROJECT_ID > lib/supabase/types-gen.ts",
    "db:seed": "npx supabase db reset --db-url $NEXT_PUBLIC_SUPABASE_URL",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "functions:serve:verify": "supabase functions serve verify-blockchain-payment --no-verify-jwt --env-file .env.local",
    "deploy:attestation-schema": "ts-node scripts/deploy-bootcamp-attestation-schema.ts",
    "preflight:certificates": "ts-node scripts/preflight-certificates.ts",
    "monitor:certificates": "ts-node scripts/monitoring/certificate-metrics.ts"
  },
